extends layout

block content
  .container
    h1=results.question
    form(method="post", action="/polls/show/#{results._id}", id="votepoll")
      each option, i in results.options
        input(type="radio", name="option", value="#{option.choice}") 
        |  #{option.choice}
        br
      input.btn.btn-default(type="button", id="newoption", value="Add Another Option")
      input.btn.btn-primary(name="submit", type="submit", value="Cast Vote!")
